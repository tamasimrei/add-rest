<?xml version="1.0"?>
<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.5/phpunit.xsd"
    stopOnError="true"
    stopOnFailure="false"
    stopOnIncomplete="false"
    stopOnSkipped="false"
    colors="false"
    verbose="false"
    bootstrap="app/bootstrap.php"
    >

    <testsuites>
        <testsuite name="Default">
            <directory suffix="Test.php">src/AddRest/Tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>src</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="junit" target="app/build/phpunit/logfile.xml" logIncompleteSkipped="false"/>
        <log type="coverage-html" target="app/build/phpunit/coverage" lowUpperBound="35" highLowerBound="70" />
    </logging>

</phpunit>
