    <logging>
        <log type="junit" target="phpunit/logfile.xml" logIncompleteSkipped="false"/>
        <log type="coverage-html" target="phpunit/coverage" lowUpperBound="35" highLowerBound="70" />
    </logging>
 -->
</phpunit>
